<div class='container-fluid'>
    <div class='row'>
        <div id='create_error' class='col-md-4 col-md-offset-4'></div>
    </div>
</div>

<br/>

<form class="form-horizontal">

    <div class="form-group">
      <label class="col-md-4 control-label" for="creatorName">Your name:</label>
      <div class="col-md-4">
        <input id="creatorName" name="creatorName" type="text" placeholder="Enter your name" class="form-control input-md">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="creatorEmail">Your email:</label>
      <div class="col-md-4">
        <input id="creatorEmail" name="creatorEmail" type="text" placeholder="Enter your email" class="form-control input-md">
      </div>
    </div>

    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="projectName">Project Name:</label>
      <div class="col-md-4">
      <input id="projectName" name="projectName" type="text" placeholder="Enter project name" class="form-control input-md">

      </div>
    </div>

    <!-- Select Basic -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="teamSize">Maximum number of members per team:</label>
      <div class="col-md-4">
        <input id="teamSize" name="teamSize" type="text" placeholder="Enter team size" class="form-control input-md">
      </div>
    </div>

    <!-- Textarea -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="inviteEmails">Invite members (add email addresses):</label>
      <div class="col-md-4">
        <textarea class="form-control" id="inviteEmails" name="inviteEmails" placeholder="Enter a list of comma-separated emails. E.g.: abc@gmail.com, def@gmail.com"></textarea>
      </div>
    </div>

    <!-- Button -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="submitProject"></label>
      <div class="col-md-4">
        <button id="submitProject" name="submitProject" class="btn btn-success" type="button">Create Project</button>
        <button class="btn btn-danger" type="reset">Reset</button>
      </div>
    </div>

    </form>
